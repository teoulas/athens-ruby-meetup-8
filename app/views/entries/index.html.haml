%h1 Fat Piggy
-if @entries.empty?
  %p No entries
-else
  %table
    %tr
      %th When
      %th What
      %th How much
    -@entries.each do |e|
      %tr
        %td=e.created_at
        %td=e.title
        %td=number_to_currency(e.amount)
  %p
    Total
    =sprintf("%.2f", @sum)
=form_for @entry do |f|
  %ul
    %li
      =f.label :entry
      =f.text_field :entry
  =f.submit "Submit"
